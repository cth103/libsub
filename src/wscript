from waflib import TaskGen

def build(bld):
    if bld.env.STATIC:
        obj = bld(features='cxx cxxstlib')
    else:
        obj = bld(features='cxx cxxshlib')

    obj.name = 'libsub'
    obj.target = 'sub'
    obj.export_includes = ['.']
    obj.source = """
                 frame_time.cc
                 reader.cc
                 stl_reader.cc
                 stl_writer.cc
                 """

    headers = """
              frame_time.h
              reader.h
              stl_reader.h
              stl_writer.h
              writer.h
              """

    bld.install_files('${PREFIX}/include/libsub', headers)
    if bld.env.STATIC:
        bld.install_files('${PREFIX}/lib', 'libsub.a')
